[core]
  editor = mvim -v
[user]
	email = scott.walkinshaw@gmail.com
	name = Scott Walkinshaw

[alias]
  browse       = !hub browse
  w            = !hub browse
  compare      = !hub compare
  cb           = !git-cut-branch
  sh           = !git-sh
  grab         = !git-grab
  thanks       = !git-thanks
  track        = !git-track
  ll           = log --pretty=oneline --abbrev-commit --max-count=15
  wip          = !git add -u && git commit -m ...
  wipc         = !date >> WIP && git add WIP && git commit -m ...
  fp           = format-patch --stdout
  ci           = commit
  x            = checkout HEAD
  bv           = !git branch --color -v | cut -c1-100
  incoming     = !git-incoming
  in           = !git-incoming
  outgoing     = !git-outgoing
  out          = !git-outgoing
  s            = status -sb -uno --ignore-submodules=untracked
  st           = status
  sa           = status -sb --ignore-submodules=untracked
  datetag      = !git tag `date "+%Y%m%d-%H%M"`

[push]
  default = current

[color]
  ui = auto

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "status"]
  added = yellow
  changed = green bold
  untracked = blue bold
